@using Microsoft.AspNetCore.Identity;
@model IEnumerable<UniS.Models.Product>
@inject SignInManager<Customer> SignInManager
@inject UserManager<Customer> UserManager


@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

@if (SignInManager.IsSignedIn(User) && UserManager.GetUserAsync(User).Result.UserName == "admin@avcol.school.nz")
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

@foreach (var item in Model) {
            var photoPath = "~/images/" + (item.fileName);
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductStock)
            </td>
                <td>
                    <img src="@photoPath" asp-append-version="true" height="100" width="100" />
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="w-100 mt-4 d-flex flex-wrap">
    @foreach (var item in Model)
    {
        var photoPath = "~/images/" + (item.fileName);
        <div class="card m-1" style="width: 25rem;">
            @if (string.IsNullOrEmpty(item.fileName))
            {
                <img style="width:100%;height:180px" src="/images/NoImage.png" class="card-img-top" alt="...">
            }
            else
            {
                <img src="@photoPath" asp-append-version="true" class="card-img-top" />
            }
            <div class="card-body">
                <h5 class="card-title">@item.ProductName</h5>
                <p class="card-text">@item.ProductDescription</p>
                @if (item.ProductStock <= 0)
                {
                    <a class="btn btn-primary" style="color:red;">Out of stock</a>
                }
                else
                {
                    <a asp-action="AddToCart" asp-route-id="@item.ProductID" class="btn btn-primary">Add to cart</a>
                }
            </div>
        </div>
    }
</div>
